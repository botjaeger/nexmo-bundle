{
  "name": "botjaeger/nexmo-bundle",
  "description": "Integrates nexmo-php in symfony 3 & 4",
  "type": "symfony-bundle",
  "keywords": ["symfony", "bundle", "nexmo", "sms", "2fa"],
  "license": "MIT",
  "authors": [
    {
      "name": "Jarn Gotostos",
      "email": "jarn.gotostos@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": { "Botjaeger\\NexmoBundle\\": "src/" }
  },
  "require": {
    "php": ">=7.1",
    "symfony/symfony": "~2.8|^3.0|^4.0",
    "nexmo/client": "^1.6"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^3.3"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable"
}
